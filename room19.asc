function room_RepExec()
{  
  SkyChange(sky);
}

function room_Load()
{
  if ( sky != 0)
  SkyChange(sky);
  
  aWind.Play(eAudioPriorityNormal, eRepeat);
}

function room_AfterFadeIn()
{   
  if ( sky == 0) {
   playerDead=1;
   SkyChange(0);
  }
}


