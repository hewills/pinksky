}

function hShuttledoor_Interact()
{
    player.Walk(263, 319, eBlock);
    
    if (alert == 0) {  
      Display("There's no reason for me to poke around in that old ship.");
      Display("Probably full of space spiders.");
    }
    
    if (alert == 1) {
      player.ChangeRoom(35, 319, 347); 
    
    }
}

