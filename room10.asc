// room script file

function room_AfterFadeIn()
{
  if (alert == 1 ) {
    
   ShakeScreenBackground(2,10, 80);
   oAlarm3.SetView(5);
   oAlarm3.Animate(0, 12, eRepeat, eNoBlock, eForwards);
   ShakeScreenBackground(10,2, 180);
  }
  
}


